<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/grayDark">  <!-- Ripple color -->

    <!-- This is your normal button background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/orange" />
        </shape>
    </item>

    <!-- This defines the ripple clipping shape -->
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/orange" /> <!-- Opaque for mask -->
        </shape>
    </item>

</ripple>
