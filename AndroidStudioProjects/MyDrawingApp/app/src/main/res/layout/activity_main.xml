<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_l3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/colorLayout"
            >
                <ImageView
                    android:id="@+id/gallery_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <com.example.mydrawingapp.DrawingView
                    android:id="@+id/myDrawingView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/colorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editLayout"
                >
                <ImageButton
                    android:id="@+id/blackBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:soundEffectsEnabled="true"
                    android:clickable="true"
                 android:background="@drawable/black_ripple_bg"
                    android:layout_marginRight="25dp"
                        />
                <ImageButton
                    android:id="@+id/blueBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blue_ripple_bg"
                    android:layout_marginRight="25dp"
                    />
                <ImageButton
                    android:id="@+id/goldBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/gold_ripple_bg"
                    android:layout_marginRight="25dp"
                    />
                <ImageButton
                    android:id="@+id/brownBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/brown_ripple_bg"
                    android:layout_marginRight="25dp"
                    />
                <ImageButton
                    android:id="@+id/redBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/red_ripple_bg"

                    />
        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/editLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
                >
                <ImageButton
                    android:id="@+id/paint_ic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/paint_ic"
                        android:scaleType="fitCenter"
                    android:layout_marginEnd="15dp"
                        />
                <ImageButton
                    android:id="@+id/save_ic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/save_ic"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="15dp"
                    />
                <ImageButton
                    android:id="@+id/gallery_ic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/gallery_ic"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="15dp"
                    />
                <ImageButton
                    android:id="@+id/undo_ic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/undo_ic"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="15dp"
                    />
                <ImageButton
                    android:id="@+id/colorPicker"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/color_palette_ic"
                    android:scaleType="fitCenter"
                    />
        </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>